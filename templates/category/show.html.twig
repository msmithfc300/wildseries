{% extends 'base.html.twig' %}

{% block title %}Category #{{ category.id }}{% endblock %}

{% block body %}
    <div class="media">
        <div class="media-body">
            <h1 class="mt-0">{{ category.name }}</h1>
            {%  for programme in programmes %}
                <div>
                    <h2>{{ loop.index }} / {{ programme.id }} {{  programme.title }}</h2>
                    <p>{{ programme.synopsis }}</p>
                    <a href="{{ path("program_show", { id: programme.id }) }}">See the page</a>
                </div>
            {%  else %}
                No series found
            {% endfor %}
        </div>
    </div>
            {% endblock %}




